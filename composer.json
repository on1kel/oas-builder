{
  "name": "on1kel/oas-builder",
  "description": "OpenAPI Specification Builder: Fluent-DSL библиотека для сборки спецификаций OpenAPI",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "on1kel/oas-core": "^1.0"
  },
  "require-dev": {
    "on1kel/oas-profile-31": "^1.0",
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.0",
    "infection/infection": "^0.29",
    "vimeo/psalm": "^6.0"

  },
  "autoload": {
    "psr-4": {
      "On1kel\\OAS\\Builder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "On1kel\\OAS\\Builder\\Tests\\": "tests/"
    }
  },
  "suggest": {
    "on1kel/oas-profile-31": "Профиль правил и фич для OpenAPI 3.1"
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "vendor/bin/phpstan analyse --configuration phpstan.neon --no-progress",
    "format": "vendor/bin/php-cs-fixer fix --config cs_dist.php --allow-risky=yes --show-progress=none"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
